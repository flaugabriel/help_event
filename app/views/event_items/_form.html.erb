<%= form_with(model: event_item, local: true) do |form| %>
  <%= form.hidden_field(:event_id, value: params[:id]) %>

    <div class="col-12 form-group">
      <label>Item</label>
      <%= form.select :item_id, @items.collect { |i| [i.description, i.id] }, {include_blank: "Selecione o item "}, :class => 'form-control form-control-lg select2'%>
    </div>

    <div class="col-6 form-group">
      <label>Quantidade</label>
      <%= form.text_field :quantities, class:'form-control form-control-lg' %>
    </div>

  <div class="col-12 form-group">
    <%= form.submit 'Adicionar', class:'btn btn-success' %>
  </div>
<% end %>
