

 <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
   <div class="modal-dialog modal-dialog-centered" role="document">
     <div class="modal-content">
       <div class="modal-header">
         <h5 class="modal-title" id="exampleModalCenterTitle">Buscar por itens</h5>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
           <span aria-hidden="true">&times;</span>
         </button>
       </div>
       <div class="modal-body">
         <%= render 'event_items/form',event_item: @event_item  %>
       </div>
     </div>
   </div>
 </div>
 </div>
</section>

<div class=" bg-dark m-b-30 bg-stars">
 <div class="container">
    <div class="row">
      <div class="col-md-8 m-auto text-white p-t-40 p-b-90">
        <h1><span class="js-greeting">Evento</span>, <%= @event.description %>.</h1>
        <p class="opacity-75">
         Criado em <%= @event.created_at %> por <%= @event.user.email %>
        </p>
      </div>
      <div class="col-md-4 m-auto text-white p-t-40 p-b-90">
        <div class="text-md-right">
          <div class="">
            <p>
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#slideRightModal">
                Participantes
              </button>
              <button type="button" class="btn btn-white" data-toggle="modal" data-target="#exampleModalCenter">
                <i class="mdi mdi-plus"></i> Item
              </button>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container pull-up">
  <div class="row">
    <div class="col-lg-8 "></div>
    <div class="col-lg-12 m-b-30">
      <div class="card shadow-lg">
        <div class="">
          <div class="p-t-30 p-b-10 text-center">
            <div class="avatar avatar-lg">
              <span class="avatar-title bg-dark rounded-circle">
                <i class="mdi mdi-cart-outline"></i>
              </span>
            </div>
            <h5 class="text-center p-t-10 ">Sacola de itens</h5>
          </div>
          <div class="bg-dark rounded-bottom card-body text-white">
            <h1 class="text-center text-success"><%= number_to_currency_br(@event.total_event(@event.id)) %></h1>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mx-md-n2">
  <% @event_items.each do |event_item| %>
    <div class="col-lg-3 col-md-6 m-b-30">
      <div class="card card-hover">
        <div class="card-body">
          <div class="text-center ">
              <h4 class="fw-600 p-t-20"><%= event_item.item.description %></h4>
              <div class="text-center">
                  <p class="text-muted fw-600"><%= event_item.item.location %></p>
                  <div class="text-success h5 fw-600">
                  <i class="mdi mdi-arrow-up"></i> <%= number_to_currency_br(event_item.item.value) %>
                  <hr>
                  <div class="row">
                    <div class="col-md-6">
                        <button class="btn btn-danger">delete</button>
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-success">Coletado</button>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
   <% end %>
  </div>
</div>