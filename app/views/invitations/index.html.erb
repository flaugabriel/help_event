<p id="notice"><%= notice %></p>

<h1>Invitations</h1>

<table>
  <thead>
    <tr>
      <th>Convidado</th>
      <th>Evento</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.user.email %></td>
        <td><%= invitation.event.description %></td>
        <td>
        <%= invitation.accept %>
        </td>
        <td>
        <% if invitation.user.id == current_user.id %>
        <%= link_to 'Acceitar', accept_invities_path(invitation.id)%>
        <%= link_to 'Ignora', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invitation', new_invitation_path %>
