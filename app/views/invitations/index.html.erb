<section class="admin-content " id="contact-search">
  <div class="bg-event m-b-30">
    <div class="container">
      <div class="row p-b-60 p-t-60">

        <div class="col-md-6 text-center mx-auto text-white p-b-30">
          <h1>Convites </h1>
        </div>
        <div class="col-md-6 text-center mx-auto text-white p-b-30">
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#customModal">
            Enviar convite <i class="mdi mdi-send"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <% if @invitations.present? %>
    <div class="container pull-up">
      <div class="row  m-b-90">
        <% @invitations.each do |invitation|%>
        <div class="col-lg-4 ">
          <%= link_to  invitation_path(invitation.id), class:'card shadow-lg guide-event ' do%>
          <div class="card-body text-dark">
            <h4 class="card-title">
              <%= invitation.event.user.name %> quer convida vocÃª para este evento, <%= invitation.event.description%>
            </h4>
            <p>Data do evento: <%= invitation.event.data_event%>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="container pull-up">
      <div class="row  m-b-90">
        <div class="col-lg-12 ">
          <div class="card shadow-lg guide-event ">
            <div class="card-body text-dark">
              <h1 class="card-title text-sm-center p-b-60 p-t-60">Sem convites no momento...</h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>


<div class="modal fade " data-keyboard="false" id="customModal" tabindex="-1" role="dialog"
  aria-labelledby="customModal" aria-hidden="true">
  <div class="modal-dialog  modal-sm modal-dialog-centered" role="document">
    <div class="modal-content m-t-80">
      <div class="modal-body">
        <div class="">
          <h3 class="text-center">Envio de convites </h3>
          <%= render 'form', invitation: @invitation %>
        </div>
      </div>
    </div>
  </div>
</div>