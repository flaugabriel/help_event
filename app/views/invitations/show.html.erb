<section class="admin-content ">
  <div class="bg-dark m-b-30">
    <div class="container">
      <div class="row p-b-60 p-t-60">
        <div class="col-md-6 text-white p-b-30">
          <div class="media">
            <div class="avatar avatar mr-3">
              <div class="avatar-title bg-success rounded-circle mdi mdi-receipt  ">
              </div>
            </div>
            <div class="media-body">
              <div class="opacity-75">Para,</div>
              <h4 class="m-b-0"><%= @invitation.user.email %></h4>
              <p class="opacity-75">
                Convite de <%= @invitation.event.user.email %> <br>
                Data do Convite : <%= @invitation.created_at %>
              </p>
              </div>
            </div>

          </div>
          <div class="col-md-5 text-center m-b-30 ml-auto">
            <div class="rounded text-white bg-white-translucent">
              <div class="p-all-15">
                <div class="row">
                  <div class="col-md-6 my-2 m-md-0">
                    <%= link_to  accept_invities_path(@invitation.id) do %>
                     <h3 class="mdi mdi-check-outline"></h3>
                      <div class="text-overline text-success">
                        Aceitar
                      </div>
                    <% end %>
                  </div>
                  <div class="col-md-6 my-2 m-md-0">
                    <%= link_to  @invitation, method: :delete do %>
                      <h3 class="mdi mdi-trash-can-outline"></h3>
                      <div class="text-overline text-danger">
                        Ignora
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="pull-up">
      <div class="container" id="printableArea">
        <div class="row">
          <div class="col-md-12 m-b-40">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <address class="m-t-10">
                      <%= @invitation.user.name%><br>
                      <span class="h4 font-primary"> você foi convidado á participar do meu evento, <%= @invitation.event.description%> </span>
                      <br>
                      Criado por <%= @invitation.event.user.email%> <br> criado em
                      <%= @invitation.event.created_at%> ate o dia <%= @invitation.event.data_event%> <br>


                    </address>
                  </div>
                  <div class="col-md-6 text-right my-auto">
                    <h1 class="font-primary">#<%= @invitation.id%></h1>
                  </div>
                </div>
                <div class="p-t-10 p-b-20">
                  <hr>
                  <div class="text-center opacity-75">
                    <button type="button" class="btn btn-event" data-toggle="modal"
                                        data-target="#slideRightModal">
                                   Mostra pessoas deste evento
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

<div class="modal fade modal-slide-right" id="slideRightModal" tabindex="-1" role="dialog" aria-labelledby="slideRightModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="slideRightModalLabel">Participantes</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table align-td-middle table-card">
          <tbody>
          <% @invitation.select_users_by_events(@invitation.event.id).each do |event_user|%>
            <tr>
              <td>
                <div class="avatar avatar-sm ">
                  <i class="mdi mdi-account  mdi-48px"></i>
                </div>
              </td>
              <td><%= event_user.user.name %></td>
              <td><%= event_user.user.email %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>