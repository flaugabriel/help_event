<%= form_with(model: item, local: true, class:'form-dark') do |form| %>

  <div class="form-row">
    <div class="form-group  col-md-4">
      <%= form.label :"Descrição" %>
      <%= form.text_field :description, class:'form-control form-control-lg text-description' %>
    </div>

    <div class="form-group  col-md-4">
      <%= form.label :"Preço" %>
      <%= form.text_field :value, class:'form-control form-control-lg  money' %>
    </div>

    <div class="form-group  col-md-4">
      <%= form.label :"Local de compra" %>
      <%= form.text_field :location, class:'form-control form-control-lg' %>
    </div>
  </div>
  <div class="text-center">
    <%= form.submit 'Criar item', class:'btn btn-lg m-b-15 ml-2 mr-2 btn-success' %>
  </div>
<% end %>
