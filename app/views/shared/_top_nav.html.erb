<header class="admin-header">
    <nav class=" ml-auto">
        <ul class="nav align-items-center">
            <% if notifications(current_user.id).present? %>
                <li class="nav-item">
                <div class="dropdown">
                    <a href="#" class="nav-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="mdi mdi-24px mdi-bell-outline"></i>
                        <span class="notification-counter"></span>
                    </a>

                    <div class="dropdown-menu notification-container dropdown-menu-right">
                        <div class="d-flex p-all-15 bg-white justify-content-between border-bottom ">
                            <span class="h5 m-0">Notificações</span>
                            <a href="/invitations" class="mdi mdi-18px mdi-notification-clear-all text-muted"></a>
                        </div>
                        <div class="notification-events bg-gray-300">
                            <div class="text-overline m-b-5">Convites</div>
                            <% notifications(current_user.id).each do |envities|%>
                                <%= link_to  invitation_path(envities.id) do%>
                                    <div class="card mt-4">
                                        <div class="card-body">
                                                <i class="mdi mdi-circle text-success"></i> Convite de <%= envities.event.user.email %> recebido em <%= envities.created_at%>.
                                            </div>
                                        </div>
                                    <% end %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
                </li>
            <%end%>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <div class="avatar avatar-sm avatar-online">
                        <span class="avatar-title rounded-circle bg-dark"><%= current_user.email[0]%></span>
                    </div>
                </a>
                <div class="dropdown-menu  dropdown-menu-right">
                    <%= link_to 'Configuração', edit_user_registration_path, class:'dropdown-item' %>
                    <div class="dropdown-divider"></div>
                      <%= link_to destroy_user_session_path, :method => 'delete', class: 'dropdown-item' do %>
                       Sair
                    <% end %>
                </div>
            </li>

        </ul>

    </nav>
</header>